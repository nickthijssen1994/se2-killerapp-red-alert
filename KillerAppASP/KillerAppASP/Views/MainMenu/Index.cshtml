@{
    ViewData["Title"] = "Main Menu";
}

<div class="row main-menu">
    <div class="col-md-4 col-md-offset-4">
        @if (TempData["LoginSuccessfull"] != null)
        {
            <div class="alert alert-success alert-dismissible fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>@TempData["LoginSuccessfull"]</strong>
            </div>
        }
        @if (TempData["RegistrationSuccessfull"] != null)
        {
            <div class="alert alert-success alert-dismissible fade in">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>@TempData["RegistrationSuccessfull"]</strong>
            </div>
        }
        <h1>Main Menu</h1>
        <hr />
        <div class="form-group">
            <a href='@Url.Action("Index", "Singleplayer")'>
                <input type='button' class="btn btn-primary" value='Singleplayer' />
            </a>
        </div>
        <div class="form-group">
            <a href='@Url.Action("Index", "Multiplayer")'>
                <input type='button' class="btn btn-primary" value='Multiplayer' />
            </a>
        </div>
        <div class="form-group">
            <a href='@Url.Action("Index", "MapCreator")'>
                <input type='button' class="btn btn-primary" value='Map Creator' />
            </a>
        </div>
        <div class="form-group">
            <a href='@Url.Action("Account", "MainMenu")'>
                <input type='button' class="btn btn-primary" value='Account' />
            </a>
        </div>
        <div class="form-group">
            <a href='@Url.Action("Settings", "MainMenu")'>
                <input type='button' class="btn btn-primary" value='Settings' />
            </a>
        </div>
        <div class="form-group">
            <a href='@Url.Action("Logout", "Account")'>
                <input type='button' class="btn btn-primary" value='Logout' />
            </a>
        </div>
    </div>
</div>