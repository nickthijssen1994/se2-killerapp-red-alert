@model KillerAppASP.ViewModels.LoginViewModel

<div class="row">
    <div id="loginresult" class="col-sm-4 form-group text-danger"></div>
    <div class="col-sm-8 form-group">
        <h1>Login</h1>
        <hr />
        <form id="loginform" asp-action="Login" class="form-group">
            <div class="form-group">
                <input asp-for="Username" class="form-control" placeholder="Username" />
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Password" />
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="RememberMe" /> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="button" value="Login" class="btn btn-default" onclick="Login()" />
            </div>
        </form>
    </div>
</div>