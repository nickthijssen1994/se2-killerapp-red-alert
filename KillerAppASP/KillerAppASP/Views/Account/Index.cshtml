@{
    ViewData["Title"] = "Account";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-4">
            <h2>Login</h2>
            <form asp-controller="Account" asp-action="Login" method="post" class="form-group has-success">
                <input type="text" class="form-control" name="username" placeholder="Username"><br />
                <input type="password" class="form-control" name="password" placeholder="Password"><br />
                <input type="submit" class="btn btn-default" value="Login"><br />
            </form>
        </div>
        <div class="col-4">
            <h2>Register</h2>
            <form asp-controller="Account" asp-action="Register" method="post" class="form-group active">
                <input type="text" class="form-control" name="email" placeholder="E-mail Adress"><br />
                <input type="text" class="form-control" name="username" placeholder="Username"><br />
                <input type="password" class="form-control" name="password" placeholder="Password"><br />
                <input type="password" class="form-control" name="confirmpassword" placeholder="Confirm Password"><br />
                <input type="submit" class="btn btn-default" value="Register"><br />
            </form>
        </div>
    </div>
</div>

