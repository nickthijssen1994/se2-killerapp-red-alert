@model ChangePasswordViewModel

<h2>Change Password</h2>
<div id="result" class="form-group text-danger"></div>
<form id="passwordform" asp-controller="Account" asp-action="ChangePassword">
    <div id="result" class="form-group text-danger"></div>
    <div id="oldpassword" class="form-group">
        <input asp-for="OldPassword" class="form-control" placeholder="Old Password" />
    </div>
    <div class="form-group">
        <input asp-for="NewPassword" class="form-control" placeholder="New Password" />
    </div>
    <div class="form-group">
        <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm New Password" />
    </div>
    <div class="form-group">
        <input type="button" value="Change" class="btn btn-default" onclick="ChangePassword()" />
    </div>
</form>