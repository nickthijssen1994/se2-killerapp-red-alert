@model RegisterViewModel

<div class="row">
    <div class="col-sm-8 form-group">
        <h1>Register</h1>
        <hr/>
        <form id="registerform" asp-action="Register" class="form-group">
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="Email"/>
            </div>
            <div class="form-group">
                <input asp-for="Username" class="form-control" placeholder="Username"/>
            </div>
            <div class="form-group">
                <input asp-for="Password" class="form-control" placeholder="Password"/>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password"/>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input id="autologin" asp-for="AutoLogin" onclick="ToggleRememberMe()"/> @Html.DisplayNameFor(model => model.AutoLogin)
                    </label>
                </div>
            </div>
            <div class="form-group" style="display:none" id="rememberme">
                <div class="checkbox">
                    <label>
                        <input asp-for="RememberMe"/> @Html.DisplayNameFor(model => model.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="button" value="Register" class="btn btn-default" onclick="Register()"/>
            </div>
        </form>
    </div>
    <div id="registerresult" class="col-sm-4 form-group text-danger"></div>
</div>