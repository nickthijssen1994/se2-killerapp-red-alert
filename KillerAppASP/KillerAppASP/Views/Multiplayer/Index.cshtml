@{
    ViewData["Title"] = "Multiplayer";
}

<div class="row menu menu-big">
    <h1>Multiplayer</h1>
    <hr/>
    <div class="col-md-6">
        <div class="row">
            <div class="form-group col-md-6">
                <h2>Player 1</h2>
                @await Html.PartialAsync("_PlayerOptions")
                <button type="button" class="btn btn-danger btn-group-justified" data-toggle="button">Ready?</button>
            </div>
            <div class="form-group col-md-6">
                <h2>Player 2</h2>
                @await Html.PartialAsync("_PlayerOptions")
                <button type="button" class="btn btn-danger btn-group-justified" data-toggle="button" disabled>Ready?</button>
            </div>
        </div>
        <div class="row">
            @await Html.PartialAsync("_StartGameOptions")
        </div>
        <br/>
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                @await Html.PartialAsync("_ChatWindow")
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <h2>Map List</h2>
        @await Html.PartialAsync("_MapList")
    </div>
    <div class="col-md-3">
        <br/>
        @await Html.PartialAsync("_MapPreview")
        <br/>
        <div class="btn-group btn-group-justified" role="group">
            <a asp-controller="Game" asp-action="Index">
                <input type="button" class="btn btn-default" value="Start Game"/>
            </a>
        </div>
    </div>
</div>